<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://townBrowse.caption"
        focusComponent="townsTable">
    <data readOnly="true">
        <collection id="townsDc"
                    class="com.company.jmixreports.entity.Town">
            <fetchPlan extends="_local"/>
            <loader id="townsDl">
                <query>
                    <![CDATA[select e from jmxrpr_Town e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout expand="townsTable" spacing="true">
        <filter id="filter"
                dataLoader="townsDl">
            <properties include=".*"/>
        </filter>
        <table id="townsTable"
               width="100%"
               dataContainer="townsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="townsTable.create"/>
                <button id="editBtn" action="townsTable.edit"/>
                <button id="removeBtn" action="townsTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
