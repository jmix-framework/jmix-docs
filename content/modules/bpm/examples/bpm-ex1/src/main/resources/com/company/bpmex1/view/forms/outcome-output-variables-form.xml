<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://com.company.bpmex1.view.forms/outcomeOutputVariablesForm.title">
    <layout>
        <formLayout>
            <entityPicker id="userEntityPicker"
                          metaClass="User"
                          property="username" label="msg://userEntityPicker.caption">
                <actions>
                    <action id="lookup" type="entity_lookup"/>
                    <action id="clear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="commentField" label="msg://comment"/>
            <textField id="rejectionReason" label="msg://rejectionReason.caption"/>
        </formLayout>
        <hbox id="actionsPanel" spacing="true">
            <button id="approveBtn" icon="CHECK" text="msg://com.company.bpmex1.view.forms/approveBtn.text"/>
            <button id="rejectBtn" icon="BAN" text="msg://com.company.bpmex1.view.forms/rejectBtn.text"/>
        </hbox>
    </layout>
</view>