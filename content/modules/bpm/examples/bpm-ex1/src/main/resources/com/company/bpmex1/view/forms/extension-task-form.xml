<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://extensionTaskForm.caption">
    <layout>
        <formLayout>
            <entityPicker id="orderEntityPicker"
                          metaClass="smpl_Order"
                          label="msg://orderEntityPicker1.caption" readOnly="true">
                <actions>
                    <action id="lookup" type="entity_lookup"/>
                    <action id="clear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="priority" label="msg://priority.caption" readOnly="true"/>
            <textArea id="orderComment" label="msg://orderComment.caption"/>
        </formLayout>
        <hbox id="actionsPanel" spacing="true">
            <button id="completeTaskBtn" text="msg://completeTaskBtn2.caption"/>
        </hbox>
    </layout>
</view>