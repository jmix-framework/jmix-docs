<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://com.company.bpmex1.view.forms/taskApprovalForm.title">
    <layout>
        <formLayout>
            <entityPicker id="orderEntityPicker" metaClass="smpl_Order" label="Order" readOnly="true">
                <actions>
                    <action id="open" type="entity_open"/>
                </actions>
            </entityPicker>
            <textField id="commentField" label="msg://comment"/>
        </formLayout>
        <hbox id="actionsPanel" spacing="true">
            <button id="approveBtn" text="msg://approve" icon="CHECK"/>
            <button id="rejectBtn" text="msg://reject" icon="BAN"/>
        </hbox>
    </layout>
</view>