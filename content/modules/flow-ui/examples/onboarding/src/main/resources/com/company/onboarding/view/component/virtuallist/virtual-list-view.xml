<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://virtualListView.title">
    <!-- tag::data[] -->
    <data>
        <collection id="usersDc" class="com.company.onboarding.entity.User">
            <loader id="usersDl" readOnly="true">
                <query>
                    <![CDATA[select e from User e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <!-- end::data[] -->
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <!-- tag::layout[] -->
    <layout>
        <!-- end::layout[] -->
        <hbox width="100%">
            <!-- tag::virtualList[] -->
        <virtualList id="virtualList" itemsContainer="usersDc"/>
            <!-- end::virtualList[] -->
            <!-- tag::usersVirtualList[] -->
        <virtualList id="usersVirtualList" itemsContainer="usersDc"/>
            <!-- end::usersVirtualList[] -->
            <button text="Test"/>
        </hbox>
        <!-- tag::fragmentRenderer[] -->
        <virtualList itemsContainer="usersDc">
            <fragmentRenderer
                    class="com.company.onboarding.view.component.virtuallist.UserFragment"/>
        </virtualList>
        <!-- end::fragmentRenderer[] -->
        <!-- tag::layout[] -->
    </layout>
    <!-- end::layout[] -->
</view>