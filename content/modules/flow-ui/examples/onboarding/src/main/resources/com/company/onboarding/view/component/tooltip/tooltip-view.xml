<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://tooltipView.title">
    <layout>
        <!-- tag::position[] -->
        <textField id="textField">
            <tooltip text="Basics tooltip"
                     position="END_BOTTOM"/>
        </textField>
        <!-- end::position[] -->
        <textField id="programmaticField"/>
        <!-- tag::focusDelay[] -->
        <textField label="Text Field">
            <tooltip text="This is a tooltip"
                     focusDelay="500"/>
        </textField>
        <!-- end::focusDelay[] -->
        <!-- tag::hideDelay[] -->
        <textField label="Text Field">
            <tooltip text="This is a tooltip"
                     hideDelay="1000"/>
        </textField>
        <!-- end::hideDelay[] -->
        <!-- tag::hoverDelay[] -->
        <textField label="Text Field">
            <tooltip text="This is a tooltip"
                     hoverDelay="500"/>
        </textField>
        <!-- end::hoverDelay[] -->
        <!-- tag::manual[] -->
        <textField id="manualTextField"
                   label="Text Field">
            <tooltip text="This is a tooltip"
                     manual="true"/>
        </textField>
        <!-- end::manual[] -->
    </layout>
</view>