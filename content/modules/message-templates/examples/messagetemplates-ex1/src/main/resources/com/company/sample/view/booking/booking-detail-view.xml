<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://bookingDetailView.title"
      focusComponent="form">
    <data>
        <instance id="bookingDc"
                  class="com.company.sample.entity.Booking">
            <fetchPlan extends="_base">
                <property name="creator" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="bookingDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="bookingDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="titleField" property="title"/>
            <entityPicker id="creatorField" property="creator">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <select id="roomField" property="room"/>
            <textArea id="descriptionField" height="9.5em" property="description"/>
            <dateTimePicker id="startDateField" property="startDate"/>
            <dateTimePicker id="endDateField" property="endDate"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
