<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1" author="doc-appsettings">
        <createTable tableName="CUSTOMER_SETTINGS">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CUSTOMER_SETTINGS"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NOTIFICATION_TEXT" type="VARCHAR(255)"/>
            <column name="DEFAULT_GRADE" type="VARCHAR(255)"/>
            <column name="SALES_THRESHOLD" type="DECIMAL(19, 2)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>