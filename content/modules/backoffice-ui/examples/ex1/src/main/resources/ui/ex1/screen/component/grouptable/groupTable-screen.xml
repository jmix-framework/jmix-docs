<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://groupTableScreen.caption">
    <!-- tag::data-start[] -->
    <data>
        <!-- end::data-start[] -->
        <!-- tag::customersDc[] -->
        <collection id="customersDc" class="ui.ex1.entity.Customer">
            <fetchPlan extends="_base"/>
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from uiex1_Customer e]]>
                </query>
            </loader>
        </collection>
        <!-- end::customersDc[] -->
        <!-- tag::data-end[] -->
    </data>
    <!-- end::data-end[] -->
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <!-- tag::layout-start[] -->
    <layout>
        <!-- end::layout-start[] -->
        <accordion id="accordion">
        <tab id="simpleGroupTableTab"
             caption="Simple groupTable"
             margin="true"
             spacing="true">
            <!-- tag::group-table-simple[] -->
        <groupTable id="groupTable" dataContainer="customersDc" width="100%" >
            <columns>
                <group>
                    <column id="city"/>
                    <column id="level"/>
                </group>
                <column id="rewardPoints"/>
                <column id="firstName"/>
                <column id="lastName"/>
            </columns>
        </groupTable>
            <!-- end::group-table-simple[] -->
        </tab>
            <tab id="tab2" caption="GroupTable with includeAll"
                 margin="true"
                 spacing="true">
                <!-- tag::group-tab-include[] -->
                <groupTable id="customersGroupTable" dataContainer="customersDc" width="100%">
                    <columns includeAll="true">
                        <group>
                            <column id="city"/>
                        </group>
                        <column id="firstName" sortable="false" groupAllowed="false"/>
                    </columns>
                </groupTable>
                <!-- end::group-tab-include[] -->
            </tab>
            <tab id="tab3" caption="GroupTable with aggregation"
                 margin="true"
                 spacing="true">
                <groupTable id="aggregatedTable"
                            dataContainer="customersDc"
                            aggregatable="true"
                            width="100%">
                    <columns>
                        <group>
                            <column id="level"/>
                        </group>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="rewardPoints"/>
                        <column id="level"/>
                        <column id="age">
                            <aggregation type="AVG"/>
                        </column>
                    </columns>
                </groupTable>
            </tab>
            <tab id="tab4" caption="GroupTable without total aggregation"
                 margin="true"
                 spacing="true">
                <groupTable id="aggregatedGroupTable"
                            dataContainer="customersDc"
                            aggregatable="true"
                            showTotalAggregation="false"
                            width="100%">
                    <columns>
                        <group>
                            <column id="level"/>
                        </group>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="rewardPoints"/>
                        <column id="level"/>
                        <column id="age">
                            <aggregation type="AVG"/>
                        </column>
                    </columns>
                </groupTable>
            </tab>
            <tab id="tab5" caption="GroupTable with programmatic grouping"
                 margin="true"
                 spacing="true">
                <groupTable id="groupTableP"
                            dataContainer="customersDc"
                            width="100%">
                    <actions>
                        <action id="group"/>
                        <action id="ungroup"/>
                        <action id="setCount"/>
                        <action id="unsetCount"/>
                    </actions>
                    <buttonsPanel>
                        <button action="groupTableP.group" caption="Group"/>
                        <button action="groupTableP.ungroup" caption="Ungroup"/>
                        <button action="groupTableP.setCount" caption="Set count"/>
                        <button action="groupTableP.unsetCount" caption="Unset count"/>
                    </buttonsPanel>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="rewardPoints"/>
                        <column id="level"/>
                        <column id="city"/>
                        <column id="age"/>
                    </columns>
                </groupTable>
            </tab>
            <tab id="tab6" caption="GroupTable with GroupCellValueFormatter"
                 margin="true"
                 spacing="true">
                <groupTable id="groupTableFormatter"
                            dataContainer="customersDc"
                            width="100%">
                    <columns>
                        <group>
                            <column id="level"/>
                        </group>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="rewardPoints"/>
                        <column id="level"/>
                        <column id="age"/>
                    </columns>
                </groupTable>
            </tab>
            <tab id="tab7" caption="GroupTable with StyleProvider"
                 margin="true"
                 spacing="true">
                <groupTable id="styledTable"
                            dataContainer="customersDc"
                            width="100%">
                    <columns>
                        <group>
                            <column id="level"/>
                        </group>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="rewardPoints"/>
                        <column id="level"/>
                        <column id="age"/>
                    </columns>
                </groupTable>
            </tab>
        </accordion>
        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->
</window>