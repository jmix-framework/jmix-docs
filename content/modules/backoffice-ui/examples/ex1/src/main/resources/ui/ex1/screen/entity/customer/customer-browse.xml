<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://customerBrowse.caption"
        focusComponent="customersTable">
    <data readOnly="true">
        <collection id="customersDc"
                    class="ui.ex1.entity.Customer">
            <fetchPlan extends="_base"/>
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from uiex1_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="customersTable"
                    width="100%"
                    dataContainer="customersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <!-- tag::related-action[] -->
                <action id="related" type="related">
                    <properties>
                        <property name="property" value="favoriteBrands"/>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <!-- end::related-action[] -->
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="email"/>
                <column id="rewardPoints"/>
                <column id="hobby"/>
                <column id="age"/>
                <column id="maritalStatus"/>
                <column id="level"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="customersTable.create"/>
                <button id="editBtn" action="customersTable.edit"/>
                <button id="removeBtn" action="customersTable.remove"/>
                <button id="customersTableRelatedBtn"
                        action="customersTable.related"
                caption="Show Favourite Brands"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
