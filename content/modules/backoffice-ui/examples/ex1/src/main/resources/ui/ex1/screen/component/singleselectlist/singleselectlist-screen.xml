<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://singleselectlist/caption">
    <!-- tag::data-start[] -->
    <data>
        <!-- end::data-start[] -->
        <!-- tag::data-customer[] -->
        <instance id="customerDc"
                  class="ui.ex1.entity.Customer"
                  fetchPlan="_base"/>
        <!-- end::data-customer[] -->
        <!-- tag::data-customers[] -->
        <collection id="customersDc"
                    class="ui.ex1.entity.Customer"
                    fetchPlan="_base">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from uiex1_Customer e]]>
                </query>
            </loader>
        </collection>
        <!-- end::data-customers[] -->
        <!-- tag::data-end[] -->
    </data>
    <!-- end::data-end[] -->
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <!-- tag::layout[] -->
    <layout>
        <!-- end::layout[] -->
        <vbox spacing="true">
        <!-- tag::single-select-list[] -->
        <singleSelectList id="singleSelectList"
                          caption="msg://singleselectlist/selectLevel"
                          dataContainer="customerDc"
                          property="level"
                          nullOptionVisible="false"
                          height="100"/>
        <!-- end::single-select-list[] -->
        <!-- tag::options-container[] -->
        <singleSelectList id="customerList"
                          optionsContainer="customersDc"
                          captionProperty="lastName"/>
        <!-- end::options-container[] -->
        <!-- tag::options-list[] -->
        <singleSelectList id="rewardPointsList"
                          caption="msg://singleselectlist/selectRewardPoints"
                          height="200"/>
        <!-- end::options-list[] -->
        <!-- tag::options-map[] -->
        <singleSelectList id="ratingList"
                          caption="msg://singleselectlist/selectRating"
                          height="150"/>
        <!-- end::options-map[] -->
        <!-- tag::options-enum[] -->
        <singleSelectList id="hobbyList"
                          caption="msg://singleselectlist/selectHobby"
                          optionsEnum="ui.ex1.entity.Hobby"/>
        <!-- end::options-enum[] -->
        </vbox>
        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->
</window>