<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://checkBoxScreen.caption">
    <!-- tag::data[] -->
    <data>
        <instance id="userDc" class="ui.ex1.entity.User">
            <loader/>
        </instance>
    </data>
    <!-- end::data[] -->

    <!-- tag::start-layout[] -->
    <layout>
        <!-- end::start-layout[] -->
        <hbox spacing="true">
            <!-- tag::check-box[] -->
            <checkBox id="checkBox"
                      caption="msg://ui.ex1.screen.component.checkbox/checkBoxCaption"
            />
            <!-- end::check-box[] -->

            <!-- tag::data-aware-check-box[] -->
            <checkBox dataContainer="userDc"
                      property="enabled"
                      caption="msg://ui.ex1.screen.component.checkbox/userProperty"
            />
            <!-- end::data-aware-check-box[] -->
        </hbox>
        <!-- tag::end-layout[] -->
    </layout>
    <!-- end::end-layout[] -->
</window>