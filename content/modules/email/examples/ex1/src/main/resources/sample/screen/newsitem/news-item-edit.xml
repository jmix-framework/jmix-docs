<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://newsItemEdit.caption"
        focusComponent="form">
    <data>
        <instance id="newsItemDc"
                  class="sample.entity.NewsItem">
            <fetchPlan extends="_local"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="newsItemDc">
            <column width="350px">
                <dateField id="dateField" property="date"/>
                <textField id="captionField" property="caption"/>
                <textField id="contentField" property="content"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
