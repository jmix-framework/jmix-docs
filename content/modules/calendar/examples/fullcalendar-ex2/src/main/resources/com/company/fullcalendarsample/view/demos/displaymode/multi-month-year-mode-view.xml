<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:calendar="http://jmix.io/schema/fullcalendar/ui"
      title="msg://multiMonthYearModeView.title">
    <layout>
        <!-- tag::multi-month-year-mode1[] -->
        <calendar:calendar id="calendar"
                           initialDisplayMode="MULTI_MONTH_YEAR"
                           height="100%"
                           width="100%"/>
        <!-- end::multi-month-year-mode1[] -->


        <calendar:calendar>
            <calendar:displayModeProperties>
                <calendar:dayGridDay />
                <calendar:dayGridWeek />
                <calendar:dayGridMonth/>
                <calendar:dayGridYear/>
            </calendar:displayModeProperties>
        </calendar:calendar>
    </layout>
</view>