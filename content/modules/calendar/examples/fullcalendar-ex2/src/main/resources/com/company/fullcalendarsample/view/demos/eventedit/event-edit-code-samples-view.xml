      xmlns:calendar="http://jmix.io/schema/fullcalendar/ui"
      title="msg://eventEditCodeSamplesView.title">
    <layout>
        <!-- tag::event-edit-drag-and-drop1[] -->
        <calendar:calendar id="calendar"
                           eventStartEditable="true"
                           height="100%"
                           width="100%"/>
        <!-- end::event-edit-drag-and-drop1[] -->
