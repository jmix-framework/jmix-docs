<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:calendar="http://jmix.io/schema/fullcalendar/ui"
      title="msg://displayModePropertiesOverrideView.title">
    <layout>
        <!-- tag::display-mode-properties-override1[] -->
        <calendar:calendar id="calendar"
                           height="100%"
                           width="100%"
                           weekNumbersVisible="true">
            <calendar:displayModeProperties>
                <calendar:dayGridMonth>
                    <calendar:properties>
                        <calendar:property name="weekNumbers" value="false"/>
                    </calendar:properties>
                </calendar:dayGridMonth>
            </calendar:displayModeProperties>
        </calendar:calendar>
        <!-- end::display-mode-properties-override1[] -->
    </layout>
</view>