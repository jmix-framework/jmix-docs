<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="pivottable-onboarding">
        <createTable tableName="TIP_INFO">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TIP_INFO"/>
            </column>
            <column name="TOTAL_BILL" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="TIP" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="SMOKER" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="SIZE_" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="SEX" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DAY_" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TIME_" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>