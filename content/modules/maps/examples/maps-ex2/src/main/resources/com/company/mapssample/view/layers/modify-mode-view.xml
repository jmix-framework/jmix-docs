<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view" xmlns:maps="http://jmix.io/schema/maps/ui"
      title="msg://com.company.mapssample.view.layers/modifyModeView.title">
    <data>
        <collection id="regionsDc" class="com.company.mapssample.entity.Region">
            <loader id="regionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Region e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <maps:geoMap id="map" height="100%" width="100%">
            <maps:layers>
                <maps:tile>
                    <maps:osmSource/>
                </maps:tile>
                <!-- tag::modify-mode1[] -->
                <maps:vector id="layer">
                    <maps:dataVectorSource id="source"
                                           featureModifyEnabled="true"
                                           dataContainer="regionsDc"
                                           property="area"/>
                </maps:vector>
                <!-- end::modify-mode1[] -->
                <!-- tag::feature-modify-mode[] -->
                <maps:vector id="featureLayer">
                    <maps:vectorSource id="featureSource"
                                       featureModifyEnabled="true"/>
                </maps:vector>
                <!-- end::feature-modify-mode[] -->
            </maps:layers>
        </maps:geoMap>
    </layout>
</view>