<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:maps="http://jmix.io/schema/maps/ui"
        caption="msg://heatmap.caption">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="maps.ex1.entity.Order"
                    fetchPlan="_local">
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from mapst_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <maps:geoMap id="map" height="100%" width="100%" zoom="3" center="-99.755859, 39.164141">
            <maps:layers>
                <maps:tile id="tiles" tileProvider="sample_CartoTileProvider"/>
                <!-- tag::gradient[] -->
                <!-- tag::heatmap-xml[] -->
                <maps:heatmap  id="heatmapLayer"
                               dataContainer="ordersDc"
                               intensityProperty="amount">
                <!-- end::heatmap-xml[] -->
                    <maps:gradient>
                        <maps:intensity value="0.4" color="blue"/>
                        <maps:intensity value="0.65" color="lime"/>
                        <maps:intensity value="1" color="red"/>
                    </maps:gradient>
                </maps:heatmap>
                <!-- end::gradient[] -->
            </maps:layers>
        </maps:geoMap>
    </layout>
</window>