<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        xmlns:maps="http://jmix.io/schema/maps/ui"
        caption="msg://territoryBrowseTile1.caption"
        focusComponent="territoriesTable">
    <data readOnly="true">
        <collection id="territoriesDc"
                    class="maps.ex1.entity.Territory">
            <fetchPlan extends="_local"/>
            <loader id="territoriesDl">
                <query>
                    <![CDATA[select e from mapst_Territory e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="territoriesTable"
                    width="100%"
                    dataContainer="territoriesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="polygon"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="territoriesTable.create"/>
                <button id="editBtn" action="territoriesTable.edit"/>
                <button id="removeBtn" action="territoriesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <maps:geoMap id="map" height="400px" width="800px" center="-99.755859, 39.164141" zoom="4">
            <!-- tag::tile-xml[] -->
            <maps:layers>
                <maps:tile id="tileLayer"
                           urlPattern="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
                           attribution="&#169; &lt;a href=&quot;https://www.openstreetmap.org/copyright&quot;&gt;
                               OpenStreetMap&lt;/a&gt; contributors"/>
            </maps:layers>
            <!-- end::tile-xml[] -->
        </maps:geoMap>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
