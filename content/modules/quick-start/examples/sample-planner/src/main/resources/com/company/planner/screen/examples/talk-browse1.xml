<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://talkBrowse1.caption"
        focusComponent="talksTable">
    <data readOnly="true">
        <collection id="talksDc"
                    class="com.company.planner.entity.Talk">
            <fetchPlan extends="_base">
                <property name="speaker" fetchPlan="_base"/>
                <property name="endDate"/>
            </fetchPlan>
            <loader id="talksDl">
                <query>
                    <![CDATA[select e from planner_Talk e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="talksTable" spacing="true">
        <filter id="filter"
                dataLoader="talksDl">
            <properties include=".*"/>
        </filter>
        <tabSheet>
            <tab id="tableTab" caption="Tab" expand="talksTable">
                <groupTable id="talksTable"
                                    width="100%"
                                    dataContainer="talksDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="topic"/>
                        <column id="startDate"/>
                        <column id="speaker"/>
                        <column id="duration"/>
                        <column id="description"/>
                        <column id="endDate"/>
                    </columns>
                    <simplePagination/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="talksTable.create"/>
                        <button id="editBtn" action="talksTable.edit"/>
                        <button id="removeBtn" action="talksTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
            <tab id="calendarTab" caption="Tab" margin="true,false,false,false" spacing="true" expand="talksCalendar">
                <calendar id="talksCalendar" dataContainer="talksDc" captionProperty="topic"
                          descriptionProperty="description" endDateProperty="endDate" startDateProperty="startDate"/>
            </tab>
        </tabSheet>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
